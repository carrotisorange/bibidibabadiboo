<?php foreach ($this->reports as $report): ?>
    <tr style="height:3%" id="TR_<?= $report['reportId']; ?>" <?php if(!$this->isAssigned) :?> class="TR_FORM_<?= $report['formId']; ?> " <?php endif?>>
        <td style="width: 5%;color: <?= $this->isAssigned ? 'black' : 'blue'; ?>">
            <?= $report['reportId']; ?>            
            <?php if( $this->isAssigned) :?>
