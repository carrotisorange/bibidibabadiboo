            <?php endif?>
        </td>        
        <td style="width: 5%"><?= $report['stateAbbr']; ?></td>
        <td style="width: 10%"><?= $report['formName']; ?></td>
        <td style="width: 10%"><?= $report['agencyName']; ?></td>
        <td style="width: 10%"><?= $report['workTypeExternal']; ?></td>       
        <td style="width: 5%">
